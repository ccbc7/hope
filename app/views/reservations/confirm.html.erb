<h1>予約確認画面</h1>
<h3>この部屋を予約しようとしているユーザー</h3>
<table>
  <tr>
    <th>予約者ID:</th>
    <td>
      <%= @current_user.id %>
    </td>
  </tr>
  <tr>
    <th>予約者名:</th>
    <td>
      <%= @current_user.user_name %>
    </td>
  </tr>
  <tr>
    <th>ルームネーム:</th>
    <td>
      <%= @room.room_name %>
    </td>
  </tr>
  <tr>
    <th>料金:</th>
    <td>
      <%= @room.charge %>円
    </td>
  </tr>
  <tr>
    <th>人数:</th>
    <td>
      <%= params[:people] %>人
    </td>
  </tr>
  <tr>
    <th>合計料金:</th>
    <td>
      <% sub_price=(@room.charge) * params[:people].to_i %>
        <%= sub_price.floor %>円
    </td>
  </tr>
</table>

  <%= form_with model: @reservation, local: true do |f| %>
    <%= f.hidden_field :user_id, :value=> @current_user.id %>
    <%= f.hidden_field :room_id, :value=> @room.id %>
    <%= f.hidden_field :room_name, :value=> @room.room_name %>
    <%= f.hidden_field :charge, :value=> @room.charge %>
    <%= f.hidden_field :people, :value=> params[:people] %>

    <%= f.submit "修正する" , name: :back %>
    <%= f.submit "確定する" %>

  <% end %>
