<h3>予約済みルーム</h3>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>ルームネーム</th>
      <th>料金</th>
      <th>予約者ID</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |r| %>
      <tr>
        <td>
          <%= r.id %>
        </td>
        <td>
          <%= r.room_name %>
        </td>
        <td>
          <%= r.charge %>
        </td>
        <td>
          <%= r.user_id %>
        </td>
        <td>
          <%= link_to "削除" , r, method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
      <% end %>
  </tbody>
